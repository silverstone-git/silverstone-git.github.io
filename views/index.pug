script.
  function expandSideNav() {
  document.getElementById("closeButtonLink").style.width="auto";
  document.getElementById("closeButtonLink").style.display="block";
  document.getElementById("closeButton").style.visibility="visible";
  document.getElementById("closeButton").style.display="flex";
  document.getElementById("nav-expander").style.display="none";
  document.getElementById("sideNav").classList.add("bigNav");
  var sheet = document.getElementById("dark-sheet");
  sheet.style.display = "flex";
  sheet.classList.remove("dark-sheet-hide");
  sheet.classList.add("dark-sheet-show");
  }
  function closeSideNav(nosheet = false) {
  document.getElementById("sideNav").classList.remove("bigNav");
  document.getElementById("closeButton").style.display="block";
  document.getElementById("closeButton").style.visibility="hidden";
  document.getElementById("closeButtonLink").style.display="none";
  document.getElementById("nav-expander").style.display="flex";
  // if the sheet is removed on close side nav, the impressum goes with it, because its a child
  if(!nosheet) {
    var sheet = document.getElementById("dark-sheet");
    sheet.style.backgroundColor = null;
    sheet.classList.remove("dark-sheet-show");
    sheet.classList.add("dark-sheet-hide");
    setTimeout(
      function() {
        sheet.style.display='none';
      }, 1000);
  }
  }
  function removeMessage() {
  document.getElementById("message-box").style.display="none";
  }
  function removeImpressum() {
  document.getElementById("imp-div").remove();
  var sheet = document.getElementById("dark-sheet");
  sheet.style.zIndex = 2;
  sheet.style.display = "none";
  sheet.style.backgroundColor = null;
  sheet.classList.remove("dark-sheet-show");
  sheet.classList.add("dark-sheet-hide");
  }
  function showImpressum(fromDesktop = false) {
  if(!fromDesktop){
    closeSideNav(true);
  }
  var sheet = document.getElementById("dark-sheet");
  var impDiv = document.createElement("div");
  var text = document.createElement("p");
  var authorLink = document.createElement("a");
  var impTextDiv = document.createElement("div");
  sheet.onclick = removeImpressum;
  impTextDiv.classList.add("impressum-text");
  text.appendChild(document.createTextNode("Icons in icons div and the hamburger menu icon designed by"));
  authorLink.href = "https://freeicons.io";
  authorLink.target = "_blank";
  authorLink.innerHTML = "icons king1";
  impDiv.id = "imp-div";
  impTextDiv.appendChild(text);
  impTextDiv.appendChild(authorLink);
  impDiv.appendChild(impTextDiv);
  sheet.appendChild(impDiv);
  impDiv.classList.add("imp-div");
  sheet.classList.add("imp-sheet");
  sheet.style.display = "flex";
  sheet.style.backgroundColor = "rgba(0, 0, 0, 0.8)";
  sheet.style.zIndex = 3;
  }
