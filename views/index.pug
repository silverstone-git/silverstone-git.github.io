script.
  function expandSideNav() {
  document.getElementById("sideNav").classList.add("bigNav");
  document.getElementById("closeButtonLink").style.width="auto";
  document.getElementById("closeButtonLink").style.display="block";
  document.getElementById("closeButton").style.visibility="visible";
  document.getElementById("closeButton").style.display="flex";
  document.getElementById("nav-expander").style.display="none";
  }
  function closeSideNav() {
  document.getElementById("sideNav").classList.remove("bigNav");
  document.getElementById("closeButton").style.display="block";
  document.getElementById("closeButton").style.visibility="invisible";
  document.getElementById("closeButtonLink").style.display="none";
  document.getElementById("nav-expander").style.display="flex";
  }
  function removeMessage() {
  document.getElementById("message-box").style.display="none";
  }
  function showImpressum() {
  closeSideNav();
  var sheet = document.createElement("div");
  var impDiv = document.createElement("div");
  var text = document.createElement("p");
  var closeButton = document.createElement("a");
  sheet.id = "impressum-sheet";
  closeButton.classList.add("imp-close-link");
  closeButton.href="/";
  closeButton.appendChild(document.createTextNode("X"));
  text.classList.add("impressum-text");
  text.appendChild(document.createTextNode("Icons in icons div and the hamburger menu icon designed by <a href='https://freeicons.io' target='_blank'>icons king1</a>"));
  impDiv.appendChild(text);
  impDiv.appendChild(closeButton);
  sheet.appendChild(impDiv);
  impDiv.classList.add("imp-div");
  sheet.classList.add("imp-sheet");
  impDiv.onclick="closeImpressum()";
  document.getElementById("sections-container").appendChild(sheet);
  console.log("show impressum function tried to run");
  }
